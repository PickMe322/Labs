using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Prakt_6
{
    class DataScience : Department
    {
        public override void TraineeDistribution(List<Student> candidates)
        {

            foreach (var candidate in candidates.ToList())
            {
                if ((candidate.Achievement >= 0.85 && (candidate.SelectedLanguage == ProgrammingLanguage.Python) && NumberOfPositions != 0))
                {
                    Trainees.Add(candidate);
                    candidates.Remove(candidate);
                    NumberOfPositions--;
                }
            }

        }
        public new string PrintTrainees()
        {
            Console.WriteLine("!DataScience набирает!");
            string result = base.PrintTrainees();
            int i = 0;
            foreach (var candidate in Trainees)
            {
                i++;
                result = result.Replace($"|{i}", $", achievement: {candidate.Achievement}|");
            }
            return result;
        }
    }
}
