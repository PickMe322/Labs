using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Prakt_6
{
  class GameDevelopment : Department
        {
            public override void TraineeDistribution(List<Student> candidates)
            {

                foreach (var candidate in candidates.ToList())
                {
                    if ((candidate.CourseNumber >= 2 && candidate.Achievement >= 0.8 && (candidate.SelectedLanguage == ProgrammingLanguage.CPlusPlus || candidate.SelectedLanguage == ProgrammingLanguage.CSharp) && NumberOfPositions != 0))
                    {
                        Trainees.Add(candidate);
                        candidates.Remove(candidate);
                        NumberOfPositions--;
                    }
                }
            }
        }
}
